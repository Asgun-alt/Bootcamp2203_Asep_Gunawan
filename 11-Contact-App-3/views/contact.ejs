<% if (!contacts) { %>
    <div class="alert alert-danger" role="alert">
        Contact is not available
    </div>

    <% } else {%>
        <div class="card" style="width: 18rem; margin: 3rem">
            <div class="card-body">
                <h5 class="card-title">Detail Contact</h5>
                <p class="card-text">Nama :
                    <%= contacts.name %>
                </p>
                <p class="card-text">No HP:
                    <%= contacts.number %>
                </p>
                <p class="card-text">email :
                    <%= contacts.email %>
                </p>
                <a href="/" class="card-link"><button type="button" class="btn btn-primary">Back</button></a>
            </div>
        </div>
        <% } %>