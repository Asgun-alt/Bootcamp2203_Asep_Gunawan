<div class="display-3 text-center text-uppercase"> Welcome to <%= title_page %> page </div>
<div class="display-5"> Contact List</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor Hp</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <% if(contact.length < 1){ %>
                <p>empty</p>
                <% } else { %>
                    <!-- loop through array and show it to the list -->
                    <% contact.forEach((contact, index)=> { index++ %>
                        <th scope="row">
                            <%= index %>
                        </th>
                        <td>
                            <%= contact.name %>
                        </td>
                        <td>
                            <%= contact.number %>
                        </td>
                        <td>
                            <%= contact.email %>
                        </td>
        </tr>

        <% }); %>
            <% } %>
    </tbody>
</table>