<div class="display-3 text-center text-uppercase">
    <%= title %>
</div>

<div class="container-sm col-md-5">

    <% if (typeof errors !='undefined' ) { %>
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>git
        </div>
        <% } %>

            <form method="post" action="/contact/update">
                <input type="hidden" name="oldName" value="<%= contact.oldName || contact.name %>">
                <div class="mb-3">
                    <label for="name" class="form-label">Full name</label>
                    <input type="text" class="form-control" id="name" name="name" required value="<%= contact.name %>">
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>">
                </div>

                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone number</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" required
                        value="<%= contact.phoneNumber %>">
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
</div>