<div class="body-container">
    <div class="pt-3 pb-3">

        <div class="container-fluid">
            <% if (typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.message %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>
        </div>

        <div class="container-sm col-md-5 form-container">
            <form method="post" action="/register/new_user" enctype="multipart/form-data">
                <!-- User name -->
                <div class="row">
                    <div class="col mb-3">
                        <label for="price" class="form-label">Full name : </label>
                        <input type="text" id="fullname" name="fullname" class="form-control" placeholder="Full name">
                    </div>
                    <div class="col mb-3">
                        <label for="price" class="form-label">User name : </label>
                        <input type="text" id="username" name="username" class="form-control" placeholder="User name">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Email : </label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Email">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Password : </label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Password">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Confirm password : </label>
                    <input type="password" id="confirm_password" name="confirm_password" class="form-control"
                        placeholder="Confirm password">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Role : </label>
                    <input type="text" id="role" name="role" class="form-control" value="user">
                </div>

                <p class="font-monospace">User Image :</p>
                <small class="text-muted">profile picture required.</small>
                <div class="input-group mb-4">
                    <input type="file" id="user_image" name="user_image" class="form-control"
                        aria-describedby="inputGroupFileAddon04" aria-label="Upload" required>
                </div>

                <button type="submit" value="register" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>
</div>