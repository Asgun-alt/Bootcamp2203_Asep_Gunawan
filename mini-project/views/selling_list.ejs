<div class="body-container">
    <div class="pt-3 pb-3">

        <div class="container py-5">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <!-- List group-->
                    <ul class="list-group shadow">
                        <!-- list group item-->
                        <li class="list-group-item">
                            <!-- Custom content-->
                            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                                <div class="row">

                                    <div class="col-4">
                                        <img src="../<%= selling_list.product_image %>" alt="Generic placeholder image"
                                            width="200" class="ml-lg-5 order-1 order-lg-2">
                                    </div>

                                    <div class="col-8">
                                        <div class="media-body order-2 order-lg-1">
                                            <h5 class="mt-0 font-weight-bold mb-2">
                                                <%= selling_list.product_name %>
                                            </h5>
                                            <p class="font-italic text-muted mb-0 small">
                                                <%= selling_list.description %>
                                            </p>
                                            <div class="d-flex align-items-center justify-content-between mt-1">
                                                <h6 class="font-weight-bold my-2">Price : <%= selling_list.price%>
                                                </h6>
                                            </div>
                                        </div>
                                        <blockquote class="blockquote text-right"><br>
                                            <footer class="blockquote-footer">
                                                <cite title="Source Title">
                                                    By <%= selling_list.username %>
                                                        <%= selling_list.date %>
                                                </cite>
                                            </footer>
                                        </blockquote>
                                    </div>

                                </div>
                            </div> <!-- End -->
                        </li> <!-- End -->
                </div>
            </div>
        </div>

    </div>
</div>